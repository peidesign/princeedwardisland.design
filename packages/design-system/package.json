{
  "name": "@peidesign/design-system",
  "version": "0.1.0",
  "description": "The design system used for all P.E.I Design properties",
  "collection": "dist/components/collection/collection-manifest.json",
  "types": "dist/components/types/components.d.ts",
  "main": "dist/components/index.js",
  "module": "dist/components/index.mjs",
  "es2015": "dist/esm/index.mjs.js",
  "es2017": "dist/esm/index.mjs.js",
  "jsnext:main": "dist/esm/index.mjs.js",
  "style": "dist/css/peid-design-system.css",
  "files": [
    "dist/css",
    "dist/components"
  ],
  "scripts": {
    "start": "npx netlify dev",
    "develop": "npx run-p develop.*",
    "develop.tokens": "node ./scripts/tokens.js",
    "develop.stencil": "npx stencil build --watch --serve",
    "develop.storybook": "npx start-storybook --port=3334 -s dist/components",
    "prebuild": "npx rimraf dist",
    "build": "npx run-s build.*",
    "build.tokens": "node ./scripts/tokens.js",
    "build.css": "npx postcss src/global/app.css -o dist/css/peid-design-system.css --env 'production_css'",
    "build.minifyCss": "npx postcss dist/css/peid-design-system.css -o dist/css/peid-design-system.min.css --use cssnano --env 'production'",
    "build.stencil": "npx stencil build --prerender",
    "build.storybook": "npx build-storybook -o dist/storybook -s dist/components",
    "test": "npx stencil test --spec --e2e",
    "test.watch": "npx stencil test --spec --e2e --watchAll"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@stencil/core": "^1.0.0",
    "@stencil/postcss": "^0.1.0",
    "@stencil/router": "^1.0.0",
    "@stencil/state-tunnel": "^1.0.0",
    "@storybook/html": "^5.1.1",
    "@types/node": "^12.0.5",
    "@types/theo": "^8.1.3",
    "@types/webpack": "^4.4.32",
    "@types/webpack-env": "^1.13.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "chroma-js": "^2.0.3",
    "color": "^3.1.1",
    "colorable": "^1.0.5",
    "cssnano": "^4.1.10",
    "fast-glob": "^2.2.6",
    "html-loader": "^0.5.5",
    "markdown-loader": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.6.0",
    "purgecss": "^1.3.0",
    "stencil-plugin-postcss-extra": "^0.1.0",
    "tailwindcss": "^1.0.0-beta.8",
    "theo": "^8.1.2"
  },
  "dependencies": {
    "@storybook/addon-a11y": "^5.1.1",
    "@storybook/addon-actions": "^5.1.1",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-knobs": "^5.1.1",
    "@storybook/addon-notes": "^5.1.1",
    "@storybook/addon-storysource": "^5.1.1",
    "@storybook/addon-viewport": "^5.1.1"
  }
}
